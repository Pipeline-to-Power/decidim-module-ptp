<div class="row collapse">
  <div class="columns large-8 large-centered text-center page-title">
    <h1><%= t(".verify") %></h1>
  </div>
</div>
<div class="columns large-4 medium-centered">
  <div class="card">
    <div class="card__content">
      <div class="columns medium-7 large-10 medium-centered">
        <%= decidim_form_for(@form, url: authorization_path(redirect_url: redirect_url), method: :put) do |form| %>
          <div class="row">
            <%= render partial: "decidim/smsauth/omniauth/development_hint" if Rails.env.development? %>
              <%= form.text_field :verification_code %>
          </div>
          <div class="row">
            <div class="columns large-centered">
              <%= form.submit t(".submit"), class:"button expanded" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="field">
        <p class="text-center">
          <%= link_to t(".not_receive"), resend_code_authorization_path %>
        </p>
        <div class="field">
          <p class="text-center">
            <%= link_to t(".destroy"), authorization_path, method: :delete, data: { confirm: t(".confirm_destroy") } %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
